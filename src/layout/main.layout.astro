---
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
}
const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body>
  <Navbar />
  <slot />
</body>
</html>

<style>
  body {
    background: var(--sl-color-black);
    color: var(--sl-color-white);
  }
</style>